@mixin font-smoothing($value: antialiased) {
  // Values: none, antialiased (default)
  @if $value == antialiased {
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }
  @else {
    -webkit-font-smoothing: subpixel-antialiased;
    -moz-osx-font-smoothing: auto;
  }
}

@mixin css3-prefix($property, $value, $important:'no') {
  @if $important == 'no' {
    -webkit-#{$property}: #{$value};
    -khtml-#{$property}: #{$value};
    -moz-#{$property}: #{$value};
    -ms-#{$property}: #{$value};
    -o-#{$property}: #{$value};
    #{$property}: #{$value};
  } @else {
    -webkit-#{$property}: #{$value} !important;
    -khtml-#{$property}: #{$value} !important;
    -moz-#{$property}: #{$value} !important;
    -ms-#{$property}: #{$value} !important;
    -o-#{$property}: #{$value} !important;
    #{$property}: #{$value} !important;
  }
}

@mixin media($max: false, $min: false) {
  @if $max {
    @if $min {
      @media screen and (max-width: $max) and (min-width: $min + 1) { @content; }
    } @else {
      @media screen and (max-width: $max) { @content; }
    }
  } @else {
    @media screen and (min-width: $min + 1) { @content; }
  }
}

@mixin breakpoint($point) {
  @if $point == xl {
    @include media($min: $l) { @content; }
  } @else if $point == l {
    @include media($max: $l) { @content; }
  } @else if $point == md-up {
    @include media($min: $md) { @content; }
  } @else if $point == md {
    @include media($max: $md) { @content; }
  } @else if $point == sm-up {
    @include media($min: $sm) { @content; }
  } @else if $point == sm {
    @include media($max: $sm) { @content; }
  } @else if $point == xs-up {
    @include media($min: $xs) { @content; }
  } @else if $point == xs {
    @include media($max: $xs) { @content; }
  } @else {
    @media (max-width: $point) { @content; }
  }
}

@mixin animation($animate...) {
  $max: length($animate);
  $animations: '';

  @for $i from 1 through $max {
    $animations: #{$animations + nth($animate, $i)};

    @if $i < $max {
      $animations: #{$animations + ", "};
    }
  }
  -webkit-animation: $animations;
  -moz-animation:    $animations;
  -o-animation:      $animations;
  animation:         $animations;
}

@mixin transform($params) {
  @include css3-prefix('transform', $params);
}

@mixin keyframes($animationName) {
  @-webkit-keyframes #{$animationName} {
    @content;
  }
  @-moz-keyframes #{$animationName} {
    @content;
  }
  @-o-keyframes #{$animationName} {
    @content;
  }
  @keyframes #{$animationName} {
    @content;
  }
}

@mixin order($val) {
  -webkit-box-ordinal-group: $val;
  -moz-box-ordinal-group: $val;
  -ms-flex-order: $val;
  -webkit-order: $val;
  order: $val;
}

