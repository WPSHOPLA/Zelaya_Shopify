  });

  var count = 0;
    $('.product-single__photo-wrapper').each(function(){
     count++;

      if(count > 3 && count < 5){
     $('.social-sharing').append("<div style='height:300px'></div>");
    }
    });
});
</script>
	{% endif %}
{% endif %}