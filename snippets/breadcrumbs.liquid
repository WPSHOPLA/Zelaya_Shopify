<div class="module-wrapper borderb">
  <div class="module module-breadcrumbs">
    <a class="module-breadcrumbs-link" href="/">{{ 'general.breadcrumbs.home' | t }}</a> <span class="module-breadcrumbs-divider">/</span>
    {% if template contains "product" %}
      {% if product.collections.size > 0 %}
        <a class="module-breadcrumbs-link"  href="/collections">{{ 'general.breadcrumbs.collections' | t }}</a> <span class="module-breadcrumbs-divider">/</span> <a class="module-breadcrumbs-link"  href="{{ product.collections.first.url }}">{{ product.collections.first.title }}</a>
      {% else %}
        <a class="module-breadcrumbs-link" href="/collections/all">{{ 'general.breadcrumbs.products' | t }}</a>
      {% endif %}
        <span class="module-breadcrumbs-divider">/</span> <span class="maincolcor">{{ product.title }}</span>
    {% elsif template contains "list-collections" %}
      <span >{{ 'collections.listing.header' | t }}</span>
    {% elsif template contains "collection" and current_tags %}
        <a class="module-breadcrumbs-link" href="/collections">{{ 'general.breadcrumbs.collections' | t }}</a> <span class="module-breadcrumbs-divider">/</span> <a class="module-breadcrumbs-link"  href="/collections/{{ collection.handle }}">{{ collection.title }}</a> <span class="module-breadcrumbs-divider">/</span> <span>{{ current_tags.first }}</span>
    {% elsif template contains "collection" and collection.handle == 'all' %}
      <span >{{ 'general.breadcrumbs.all_products' | t }}</span>
    {% elsif template contains "collection" %}
      <a class="module-breadcrumbs-link" href="/collections">{{ 'general.breadcrumbs.collections' | t }}</a> <span class="module-breadcrumbs-divider">/</span> <span>{{ collection.title }}</span>
    {% elsif template contains "blog" and current_tags.size > 0 %}
      <a class="module-breadcrumbs-link" href="{{ blog.url }}">{{ blog.title }}</a> <span class="module-breadcrumbs-divider">/</span> <span>{{ 'general.breadcrumbs.tagged' | t }}: {% for tag in current_tags %}{{ tag }}{% unless forloop.last %}, {% endunless %}{% endfor %}</span>
    {% elsif template contains "blog" %}
      <span class="maincolcor">{{ blog.title }}</span>
    {% elsif template contains "page" %}
      <span class="maincolcor">{{ page.title }}</span>
    {% elsif template contains "article" %}
      {{ blog.title | link_to: blog.url }} <span class="module-breadcrumbs-divider">/</span> <span>{{ article.title }}</span>
    {% elsif template contains "cart" %}
      <span>{{ 'cart.header' | t }}</span>
    {% elsif template contains "404" %}
      <span>404</span>
    {% elsif template contains "search" %}
      <span>{{ 'general.search.header' | t }}</span>
    {% elsif template contains "customers/login" %}
      <a class="module-breadcrumbs-link" href="/account">{{ 'general.general.account' | t }}</a> <span class="module-breadcrumbs-divider">/</span> <span>{{ 'general.general.login' | t }}</span>
    {% elsif template contains "customers/reset_password" %}
      <a class="module-breadcrumbs-link" href="/account">{{ 'general.general.account' | t }}</a> <span class="module-breadcrumbs-divider">/</span> <span>{{ 'customer.reset_password.breadcrumb' | t }}</span>
    {% elsif template contains "customers/activate_account" %}
      <a class="module-breadcrumbs-link" href="/account">{{ 'general.general.account' | t }}</a> <span class="module-breadcrumbs-divider">/</span> <span>{{ 'customer.activate_account.breadcrumb' | t }}</span>
    {% elsif template contains "customers/account" %}
      <span>{{ 'general.general.account' | t }}</span>
    {% elsif template contains "customers/addresses" %}
      <a class="module-breadcrumbs-link" href="/account">{{ 'general.general.account' | t }}</a> <span class="module-breadcrumbs-divider">/</span> <span>{{ 'customer.addresses.header' | t }}</span>
    {% elsif template contains "customers/register" %}
      <a class="module-breadcrumbs-link" href="/account">{{ 'general.general.account' | t }}</a> <span class="module-breadcrumbs-divider">/</span> <span>{{ 'customer.register.header' | t }}</span>
    {% elsif template contains "customers/order" %}
      <a class="module-breadcrumbs-link" href="/account">{{ 'general.general.account' | t }}</a> <span class="module-breadcrumbs-divider">/</span> <span>{{ 'customer.order.header' | t: order_number: order.name }}</span>
    {% endif %}
  </div>
</div>
