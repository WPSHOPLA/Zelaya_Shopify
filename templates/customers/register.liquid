<div class="module-wrapper">
  <div class="module module-register">
    <div class="module-header">
      <h1 class="module-title page-title">{{ 'customer.register.header' | t }}</h1>
    </div>
    <div class="module-body">
      <div class="module-content">
        {% form 'create_customer' %}

          {% if form.errors %}
            {{ form.errors | default_errors }}
          {% endif %}

          <div class="input-wrapper">
            <label for="customer_first_name">{{ 'customer.addresses.first_name' | t }}</label>
            <input type="text" placeholder="" value="{{ form.first_name }}" name="customer[first_name]" id="customer_first_name" class="{% if form.errors contains 'first_name' %}error{% endif %}">
          </div>

          <div class="input-wrapper">
            <label for="customer_last_name">{{ 'customer.addresses.last_name' | t }}</label>
            <input type="text" placeholder="" value="{{ form.last_name }}" name="customer[last_name]" id="customer_last_name" class="{% if form.errors contains 'last_name' %}error{% endif %}">
          </div>

          <div class="input-wrapper">
            <label for="customer_email">{{ 'general.general.email' | t }}</label>
            <input type="text" placeholder="" value="{{ form.email }}" name="customer[email]"  id="customer_email" class="{% if form.errors contains 'email' %}error{% endif %}">
          </div>

          <div class="input-wrapper">
            <label for="customer_password">{{ 'general.general.password' | t }}</label>
            <input type="password" placeholder="" value="" name="customer[password]" id="customer_password" class="{% if form.errors contains 'password' %}error{% endif %}">
          </div>

          <div class="input-wrapper cta-container">
            <input class="button" type="submit" value="{{ 'customer.activate_account.submit' | t }}">
            <span class="already-customer"><a href="/account">{{ "customer.register.already_customer" | t }}</a></span>
          </div>

        {% endform %}
      </div>
    </div>
  </div>
</div>


